<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="253dp"
        android:layout_height="83dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="cursive"
        android:text="Voice Shop"
        android:textColor="@android:color/black"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="614dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonNature"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="Sound of nature" />

            <Button
                android:id="@+id/buttonWater"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="Sound of water" />

            <Button
                android:id="@+id/buttonHolidays"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="Sound of holidays" />

            <Button
                android:id="@+id/buttonMusicInstruments"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="Sound of music instruments" />

            <Button
                android:id="@+id/buttonMachines"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="Sound of machines" />

            <Button
                android:id="@+id/buttonAnimals"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="Sound of animals" />

            <Button
                android:id="@+id/buttonBirds"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="Sound of birds" />

            <Button
                android:id="@+id/buttonCartMainMenu"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="Cart" />

        </LinearLayout>
    </ScrollView>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>